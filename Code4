src/components/Sidebar.js
import React, { useState } from "react";
import { Link } from "react-router-dom";
import "./Sidebar.css";

/*
  Sidebar placed to fit under the fixed header (topBar + navbar).
  Top offset (space above sidebar) = 34px (top bar) + 70px (navbar) = 104px.
  Make sure your header is exactly those heights or adjust the CSS top value.
*/

export default function Sidebar() {
  const [query, setQuery] = useState("");

  function onSubmitSearch(e) {
    e.preventDefault();
    // Example action - change as needed
    console.log("Search:", query);
  }

  function NavLink({ to, children, className }) {
    try {
      return <Link to={to} className={className}>{children}</Link>;
    } catch {
      return <a href={to} className={className}>{children}</a>;
    }
  }

  return (
    <aside className="sidebar" aria-label="Main sidebar">
      <div className="sidebar-inner">
        <form className="sidebar-search" onSubmit={onSubmitSearch}>
          <label htmlFor="sb-search" className="visually-hidden">Search</label>
          <input
            id="sb-search"
            type="search"
            placeholder="Search..."
            value={query}
            onChange={(e) => setQuery(e.target.value)}
            className="search-input"
            aria-label="Search"
          />
          <button type="submit" className="search-btn" aria-label="Search">ðŸ”Ž</button>
        </form>

        <nav className="sidebar-nav" aria-label="Sidebar navigation">
          <ul className="sidebar-list">
            <li><NavLink to="/home" className="sidebar-link"><span className="link-text">Home</span></NavLink></li>
            <li><NavLink to="/profile" className="sidebar-link"><span className="link-text">Profile</span></NavLink></li>
            <li><NavLink to="/dashboard" className="sidebar-link"><span className="link-text">Dashboard</span></NavLink></li>
            <li><NavLink to="/admin" className="sidebar-link"><span className="link-text">Admin</span></NavLink></li>
            <li><NavLink to="/users" className="sidebar-link"><span className="link-text">Users</span></NavLink></li>
            <li><NavLink to="/reports" className="sidebar-link"><span className="link-text">Reports</span></NavLink></li>
            <li><NavLink to="/notifications" className="sidebar-link"><span className="link-text">Notifications</span></NavLink></li>
            <li><NavLink to="/settings" className="sidebar-link"><span className="link-text">Settings</span></NavLink></li>
          </ul>
        </nav>

        <div className="sidebar-footer">
          <small>Â© {new Date().getFullYear()} GBS</small>
        </div>
      </div>
    </aside>
  );
}

src/components/Sidebar.css
/* Sidebar.css - fits under fixed header */
/* IMPORTANT: This assumes your header uses 34px (top bar) + 70px (navbar) heights.
   If your header is different, change the TOP_OFFSET value below. */

/* Outer sidebar - fixed under the header */
.sidebar {
  position: fixed;
  left: 0;
  top: 104px; /* 34 (top-bar) + 70 (navbar) = 104px */
  bottom: 0;
  width: 240px;
  background-color: #001f3d; /* deep blue contrast */
  color: #ffffff;
  border-right: 1px solid rgba(255,255,255,0.04);
  z-index: 40;
  overflow-y: auto;
  box-sizing: border-box;
}

/* Inner layout: search (auto), nav (1fr), footer (auto) */
.sidebar-inner {
  padding: 16px;
  height: 100%;
  display: grid;
  grid-template-rows: auto 1fr auto;
  gap: 12px;
  box-sizing: border-box;
}

/* Search */
.sidebar-search {
  display: inline-block; /* avoid flex */
  width: 100%;
  white-space: nowrap;
}
.search-input {
  width: calc(100% - 44px);
  padding: 8px 10px;
  border: 1px solid rgba(255,255,255,0.08);
  border-radius: 4px 0 0 4px;
  background: rgba(255,255,255,0.02);
  color: #ffffff;
  box-sizing: border-box;
}
.search-input::placeholder { color: rgba(255,255,255,0.55); }
.search-input:focus { outline: none; border-color: rgba(255,255,255,0.14); }

.search-btn {
  display: inline-block;
  width: 36px;
  height: 36px;
  margin-left: 6px;
  vertical-align: top;
  border-radius: 4px;
  border: 1px solid rgba(255,255,255,0.06);
  background: #ffb400;
  color: #00264d;
  font-size: 16px;
  line-height: 36px;
  text-align: center;
  cursor: pointer;
}

/* Navigation */
.sidebar-nav { margin-top: 6px; }
.sidebar-list {
  list-style: none;
  margin: 0;
  padding: 6px 0 0 0;
}
.sidebar-list li { margin: 6px 0; }
.sidebar-link {
  display: block;
  text-decoration: none;
  color: #ffffff;
  padding: 10px;
  border-radius: 6px;
  font-weight: 500;
  white-space: nowrap;
}
.sidebar-link:hover,
.sidebar-link:focus {
  background: rgba(255,255,255,0.03);
  outline: none;
}
.link-text { margin-left: 10px; vertical-align: middle; }

/* Footer */
.sidebar-footer {
  text-align: center;
  font-size: 12px;
  color: rgba(255,255,255,0.6);
  padding: 6px 0;
}

/* Helper class for the main content to avoid overlap */
/* Use: <main className="content-with-sidebar site-body-padding"> */
.content-with-sidebar {
  margin-left: 240px; /* same as .sidebar width */
  box-sizing: border-box;
  padding: 24px;
}

/* If you want the sidebar to begin lower (bigger header), change .sidebar { top: XXXpx } accordingly. */

How to integrate with your header & main content

Make sure your Header is fixed (top bar 34px + navbar 70px) like earlier instructions. The sidebar top: 104px matches those heights. If your header heights differ, change top: 104px in Sidebar.css to the correct combined height.

Use both header and sidebar in App.js like this (only once each):

// src/App.js
import React from "react";
import Header from "./components/Header";
import Sidebar from "./components/Sidebar";
import "./index.css"; // global reset from earlier

function App() {
  return (
    <>
      <Header />
      <Sidebar />
      <main className="content-with-sidebar site-body-padding">
        {/* Your page content goes here. The class prevents overlap with header & sidebar */}
        <h1>Dashboard</h1>
        <p>Welcome to the portal...</p>
      </main>
    </>
  );
}

export default App;

