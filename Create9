Updated Navbar.js (with Admin Dropdown Menu)
import React, { useState, useRef, useEffect } from "react";
import { Link } from "react-router-dom";
import "./Navbar.css";
import download from "../../Data/download.png"; // ‚úÖ update path as per your project
import adminIcon from "../../Data/admin.png"; // ‚úÖ place an admin image in your /Data folder

export default function Navbar() {
  const [open, setOpen] = useState(false);
  const dropdownRef = useRef(null);

  // Close dropdown when clicking outside
  useEffect(() => {
    function handleClickOutside(event) {
      if (dropdownRef.current && !dropdownRef.current.contains(event.target)) {
        setOpen(false);
      }
    }
    document.addEventListener("mousedown", handleClickOutside);
    return () => {
      document.removeEventListener("mousedown", handleClickOutside);
    };
  }, []);

  return (
    <header className="navbar">
      <div className="navbar-container">
        {/* ==== LEFT: LOGO ==== */}
        <div className="navbar-brand">
          <img src={download} alt="Standard Chartered GBS" className="img" />
          <Link to="/" className="brand-link">
            Standard Chartered GBS
          </Link>
        </div>

        {/* ==== CENTER: NAV LINKS ==== */}
        <nav className="navbar-nav">
          <ul className="nav-items">
            <li>
              <Link to="/home">Home</Link>
            </li>
            <li>
              <Link to="/dashboard">Dashboard</Link>
            </li>
            <li>
              <Link to="/admin">Admin</Link>
            </li>
          </ul>
        </nav>

        {/* ==== RIGHT: ADMIN MENU ==== */}
        <div className="navbar-actions" ref={dropdownRef}>
          <div className="admin-profile" onClick={() => setOpen(!open)}>
            <img src={adminIcon} alt="Admin" className="admin-avatar" />
            <span className="admin-name">Admin</span>
            <i className={`arrow ${open ? "up" : "down"}`}></i>
          </div>

          {open && (
            <div className="dropdown-menu">
              <Link to="/settings" className="dropdown-item">
                ‚öôÔ∏è Settings
              </Link>
              <hr />
              <Link to="/logout" className="dropdown-item logout">
                üö™ Logout
              </Link>
            </div>
          )}
        </div>
      </div>
    </header>
  );
}


Updated Navbar.css (Visually Stunning + Dropdown Animation)
/* === Navbar.css ‚Äî Modern Gradient Navbar with Dropdown === */

/* Wrapper */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 70px;
  background: linear-gradient(90deg, #002147, #004080);
  border-bottom: 1px solid rgba(255, 255, 255, 0.15);
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}

